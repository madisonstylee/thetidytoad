rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write to storage
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for profile pictures
    match /profilePictures/{userId} {
      // Allow read by anyone (profile pictures are public)
      allow read: if true;
      
      // Allow write only by the owner
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
